---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <header
      style="display: flex; align-items: center; justify-content: space-between; padding: 1rem; background: linear-gradient(90deg, #4f46e5 0%, #06b6d4 100%); color: white;"
    >
      <a
        href="/"
        style="background: white; color: #4f46e5; padding: 0.5rem 1rem; border-radius: 8px; text-decoration: none; font-weight: bold; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: background 0.2s;"
      >
        Accueil
      </a>
      <nav>
        <ul
          style="display: flex; gap: 1rem; list-style: none; margin: 0; padding: 0;"
        >
          <li>
            <a
              href="/rendu-dynamique"
              style="color: white; text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: 6px; transition: background 0.2s;"
            >
              Rendu dynamique
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
