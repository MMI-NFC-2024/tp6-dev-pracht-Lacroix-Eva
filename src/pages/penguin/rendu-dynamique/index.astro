---
import Layout from "../../../layouts/Layout.astro";
import penguins from "../../../assets/penguins.json";
const species = [...new Set(penguins.map((p) => p.species))].sort();
---

<Layout>
  <h1 class="text-3xl font-bold text-center text-purple-600 m-4">
    Penguins – Rendu dynamique
  </h1>

  <p class="text-center mb-6">
    Cliquez sur une espèce pour voir les graphiques correspondants.
  </p>
  <ul class="max-w-md mx-auto space-y-3">
    {
      species.map((s) => (
        <li>
          <a
            href={`/penguin/rendu-dynamique/${s}`}
            class="block px-4 py-2 rounded-lg bg-purple-100 hover:bg-purple-300 text-purple-800 font-medium shadow transition"
          >
            Espèce : {s}
          </a>
        </li>
      ))
    }
  </ul>
</Layout>
